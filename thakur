def get_recommendation(symptom):
    symptom = symptom.lower()
    if symptom in medicine_db:
        primary = medicine_db[symptom]["primary"]
        print(f"\n‚≠ê Primary recommendation for {symptom}:")
        print(f"üíä {primary['name']} ({primary['type']})")
        print(f"üìè Dosage: {primary['dosage']}")
        if 'max' in primary:
            print(f"‚ö†Ô∏è Max: {primary['max']}")
        
        print("\nüîç Alternatives available (ask for 'alternatives')")
    else:
        print("\n‚ùå Symptom not recognized. Try these common symptoms:")
        print(", ".join(list(medicine_db.keys())[:5]) + "...")

def show_alternatives(symptom):
    if symptom in medicine_db and "alternatives" in medicine_db[symptom]:
        print(f"\nüîÑ Alternatives for {symptom}:")
        for i, alt in enumerate(medicine_db[symptom]["alternatives"], 1):
            print(f"\n{i}. {alt['name']} ({alt['type']})")
            print(f"   üìè Dosage: {alt['dosage']}")
    else:
        print("No alternatives available for this symptom")

def main():
    print("üè• MEDICINE RECOMMENDATION SYSTEM")
    print("Covers 30 common symptoms from headache to vitamin deficiency\n")
    
    while True:
        user_input = input("\nWhat symptom are you treating? (or 'quit'): ").lower()
        
        if user_input == 'quit':
            print("üëã Stay healthy! Goodbye.")
            break
        elif user_input == 'alternatives':
            if 'last_symptom' in globals():
                show_alternatives(last_symptom)
            else:
                print("First ask about a symptom to see alternatives")
        elif user_input in medicine_db:
            last_symptom = user_input
            get_recommendation(user_input)
        else:
            print("‚ùå Symptom not recognized. Try one of these:")
            print(", ".join(list(medicine_db.keys())[:5]) + "...")

if __name__ == "__main__":
    main()
